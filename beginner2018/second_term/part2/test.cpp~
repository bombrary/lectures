#include <iostream>
#include <vector>
#include <string>
#include <algorithm>
#include <iomanip>

using namespace std;

#ifdef DEBUG_MODE
	#define DBG(n) n;
#else
	#define DBG(n) ;
#endif

#define REP(i,n) for(ll (i) = (0); (i) < (n); ++i)
#define PB push_back
#define MP make_pair
#define FI first
#define SE second
#define ALL(v) v.begin(),v.end()
#define INF 1100000000
#define LLINF 1000000000000000000LL
#define MOD 1000000007

typedef long long ll;
typedef pair<ll, ll> P;


int main()
{
  int N;
  cin >> N;

  vector<int> x(N);
  vector<int> y(N);
  vector<int> h(N);

  int tmp;
  REP(i, N){
    cin >> x[i] >> y[i] >> h[i];
    if (h[i] != 0) tmp = i;
  }

  for (int cx = 0; cx <= 100; cx++) {
    for (int cy = 0; cy <= 100; cy++) {
      int H = h[tmp] + abs(cx - x[tmp]) + abs(cy - y[tmp]);
      bool flag = true;
      for (int i = 0; i < N; i++) {
        if (max(H - abs(cx - x[i]) - abs(cy - y[i]), 0) != h[i]) {
          flag = false;
          break;
        }
      }
      if (flag) {
        cout << cx << ' ' << cy << ' ' << H << endl;
        return 0;
      }
    }
  }
}
